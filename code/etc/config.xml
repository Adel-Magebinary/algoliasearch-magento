<?xml version="1.0"?>
<config>
    <modules>
        <Algolia_Algoliasearch>
            <version>0.1.0</version>
        </Algolia_Algoliasearch>
    </modules>
    <frontend>
        <layout>
            <updates>
                <algoliasearch>
                    <file>algoliasearch.xml</file>
                </algoliasearch>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <algolia_search>
                        <type>singleton</type>
                        <class>algoliasearch/observer</class>
                        <method>useAlgoliaSearch</method>
                    </algolia_search>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </frontend>
    <global>
        <helpers>
            <algoliasearch>
                <class>Algolia_Algoliasearch_Helper</class>
            </algoliasearch>
        </helpers>
        <blocks>
            <algoliasearch>
                <class>Algolia_Algoliasearch_Block</class>
            </algoliasearch>
        </blocks>
        <models>
            <algoliasearch>
                <class>Algolia_Algoliasearch_Model</class>
            </algoliasearch>
            <catalogsearch_mysql4>
                <rewrite>
                    <fulltext>Algolia_Algoliasearch_Model_Mysql4_Fulltext</fulltext>
                </rewrite>
            </catalogsearch_mysql4>
            <catalogsearch_resource>
                <rewrite>
                    <fulltext>Algolia_Algoliasearch_Model_Resource_Fulltext</fulltext>
                </rewrite>
            </catalogsearch_resource>
        </models>
        <events>
            <catalog_product_save_after> <!-- identifier of the event we want to catch -->
                <observers>
                    <catalog_product_save_after_handler> <!-- identifier of the event handler -->
                        <type>model</type><!-- class method call type; valid are model, object and singleton -->
                        <class>algoliasearch/observer</class><!-- observers class alias -->
                        <method>saveProduct</method><!-- observer's method to be called -->
                        <args></args><!-- additional arguments passed to observer -->
                    </catalog_product_save_after_handler>
                </observers>
            </catalog_product_save_after>
            <catalog_category_save_after> <!-- identifier of the event we want to catch -->
                <observers>
                    <catalog_category_save_after_handler> <!-- identifier of the event handler -->
                        <type>model</type><!-- class method call type; valid are model, object and singleton -->
                        <class>algoliasearch/observer</class><!-- observers class alias -->
                        <method>saveCategory</method><!-- observer's method to be called -->
                        <args></args><!-- additional arguments passed to observer -->
                    </catalog_category_save_after_handler>
                </observers>
            </catalog_category_save_after>
        </events>
    </global>
    <admin>
        <routers>
            <algoliasearch>
                <use>admin</use>
                <args>
                    <module>Algolia_Algoliasearch</module>
                    <frontName>algoliasearch</frontName>
                </args>
            </algoliasearch>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <algoliasearch>
                    <file>algoliasearch.xml</file>
                </algoliasearch>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <algoliasearch>
            <settings>
                <is_enabled>0</is_enabled>
                <application_id backend_model="adminhtml/system_config_backend_encrypted" />
                <api_key backend_model="adminhtml/system_config_backend_encrypted" />
                <search_only_api_key backend_model="adminhtml/system_config_backend_encrypted" />
                <index_prefix />
                <search_delay>100</search_delay>
            </settings>
            <ui>
                <number_suggestions_product>5</number_suggestions_product>
                <number_suggestions_category>3</number_suggestions_category>
                <minimal_query_length>2</minimal_query_length>
            </ui>
        </algoliasearch>
    </default>
</config> 
